datasource db {
  provider = "postgresql"
  url      = "postgresql://ruansmit@localhost:5432/fullstack_project?schema=fullstack"
}

generator photonjs {
  provider = "photonjs"
}

model User {
  id                String   @id @default(cuid()) @unique
  email             String   @unique
  username          String   @unique
  createdAt         DateTime @default(now())
  firstName         String?
  lastName          String?
  profilePictureURL String
  reviews           Review[]
}

model Review {
  id          String     @id @default(cuid()) @unique
  createdAt   DateTime   @default(now())
  rating      Int
  description String
  author      User
  restaurant  Restaurant
}

model Restaurant {
  id       String   @id @default(cuid()) @unique
  name     String
  picture  String
  location String
  reviews  Review[]
}